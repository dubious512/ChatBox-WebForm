@page 
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}



<div class="row full-height">
    <div class="col-md-4 ">
        <h1 class="custom-title1">@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName">Tên đăng nhập</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">Địa chỉ email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName">Tên đầy đủ</label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Chọm ảnh đại diện</p>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="0" checked />
                    <img class="avatar-icon" src="~/images/icons/avatar1.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="1" />
                    <img class="avatar-icon" src="~/images/icons/avatar2.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="2" />
                    <img class="avatar-icon" src="~/images/icons/avatar3.png" alt="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="3" />
                    <img class="avatar-icon" src="~/images/icons/avatar4.png" alts="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="4" />
                    <img class="avatar-icon" src="~/images/icons/avatar5.png" alts="" />
                </label>
                <label>
                    <input asp-for="Input.Avatar" type="radio" value="5" />
                    <img class="avatar-icon" src="~/images/icons/avatar6.png" alts="" />
                </label>
            </div>
            <button type="submit" class="btn btn-primary rounded">Đăng ký</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}